#include <iostream>
#include <fstream>
#include "Agent.hpp"
#include "Functions.hpp"
#include "Swarm.hpp"

int main()
{
    std::cout << "Hello World!\n";
    ofstream output("xOneMinima.txt");

    
    int i;
    int size = 500;
    double* xOne = xSet(size);
    double* cornField = cornfield(size);

    //double randy = randDoubOne();
    //cout << randy;

    //swarm SwarmOne = swarm(10, 10, 20);
    agent agentTest = agent(1, size, 4, 2);
    double* posTest = agentTest.positionArr(0.01, xOne);
    
    for (i = 0; i < size; i++) {
        output << "\n" << posTest[i] << "\t" << agentTest.p_loc[i];
    }
    
    for (i = 0; i < size; i++) {
        cout << "\n" << xOne[i] << "\t" << cornField[i];
    }

}

